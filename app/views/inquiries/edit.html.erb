<h1 class="page-header">アンケート</h1>
<%= form_for(@inquiry) do |f| %>
  <%= hidden_field_tag :uuid, @respondent.uuid %>
  <div class="form-group">
    <%= label_tag 'content[q1]', '質問1' %>
    <label class="radio">
      <label><%= radio_button_tag 'content[q1]', 1 %> 選択肢1</label>
    </label>
    <label class="radio">
      <label><%= radio_button_tag 'content[q1]', 2 %> 選択肢2</label>
    </label>
    <label class="radio">
      <label><%= radio_button_tag 'content[q1]', 3 %> 選択肢3</label>
    </label>
  </div>
  <div class="form-group">
    <%= label_tag 'content[q2]', '質問2' %>
    <%= text_field_tag 'content[q2]', '', class: 'form-control' %>
  </div>
   <%= submit_tag 'アンケートを送信', class: 'btn btn-primary' %>
<% end %>
